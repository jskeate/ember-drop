<div class="row">
  <div class="medium-8 columns medium-centered text-center">
    <h1>Ember-Drop</h1>
  </div>
</div>
<div class="row">
  <div class="medium-8 columns medium-centered text-center">
    <p>Ember-Drop is an Ember addon that wraps the drop.js library.</p>
  </div>
</div>
<div class="row">
  <div class="medium-8 columns medium-centered text-center">
    <div class="medium-6 columns">
      <div class="panel hover-element text-center">
        Hover
      </div>
    </div>
    <div class="medium-6 columns">
      <div class="panel click-element text-center">
        Click
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="medium-8 columns medium-centered text-center">
    <div class="medium-6 columns">
      <div class="panel action-element text-center">
        Events
      </div>
    </div>
    <div class="medium-6 columns">
      <div class="panel action-element text-center">
        Hello {{name}}!
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="medium-8 columns medium-centered">
    <div class="medium-6 columns">
      <a href="https://github.com/rwwagner90/ember-drop/blob/master/README.md" class="button expand">Docs</a>
    </div>
    <div class="medium-6 columns">
      <a href="https://github.com/rwwagner90/ember-drop" class="button expand">Github</a>
    </div>
  </div>
</div>


{{ember-drop
classes='drop-theme-arrows-bounce-dark'
content=hoverContent
openOn='hover'
position='top center'
targetSelector='.hover-element'}}

{{ember-drop
classes='drop-theme-arrows-bounce-dark'
content=clickContent
openOn='click'
position='top center'
targetSelector='.click-element'}}

{{ember-drop
classes='drop-theme-arrows-bounce-dark'
content=testContent
openOn='hover'
position='top center'
targetSelector='.action-element'}}
